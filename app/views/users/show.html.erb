<% if current_user %>
  <div class='new-gram text-center'>
      <%= link_to icon('camera'), new_gram_path %>
  </div>
<% end %>

<% @grams.each do |gram| %>
  <div class='row'>
    <div class='col-sm-6 col-sm-offset-3'>
      <div class='panel panel-default'>
        <div class='panel-heading'>
          <div class='row'>
            <div class='col-sm-6'>
              Me
            </div>
            <div class='col-sm-6 text-right'>
              <span class='created_at'><%= link_to time_ago_in_words(gram.created_at), gram_path(gram) %></span>
              &nbsp;
              <% if current_user %>
                <%= link_to icon('trash-o'), gram_path(gram), method: :delete, data: { confirm: 'Are you sure you want to delete this Gram?'} %>
              <% end %>
            </div>
          </div>
        </div>
        <div class='panel-body'>
          <div><%= image_tag gram.image_url %></div>
        </div>
        <div class='panel-footer'>
          <div class='gram-title'><%= gram.title %></div>
          <div class='gram-location'><%= icon('map-marker') %> <%= country_name(gram.location_code) %></div>
          <div class='gram-content'><%= gram.description %></div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class='text-center'>
  <%= paginate @grams %>
</div>
